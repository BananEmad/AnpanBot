<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentWhite"
    >
    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgheader"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Video">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/username"
                    android:src="@drawable/circle_user"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/view"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.01999998" />

                <TextView
                    android:id="@id/nameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"

                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="end"
                    android:text="الوحدة الاولى "
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <android.support.v7.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:alignmentMode="alignMargins"
                app:columnCount="1"
                app:rowCount="5">

                <android.support.v7.widget.CardView
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    android:id="@+id/cd1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:padding="10dp">

                        <ImageView

                            android:id="@+id/vid_img1"
                            android:layout_width="170dp"
                            android:layout_height="145dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/chem_video1" />

                        <TextView
                            android:id="@+id/vid_title1"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:ellipsize="end"
                            android:padding="10dp"
                            android:text="@string/chem1"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    android:id="@+id/cd2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:padding="10dp">

                        <ImageView

                            android:id="@+id/vid_img2"
                            android:layout_width="170dp"
                            android:layout_height="145dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/chem_video2" />

                        <TextView
                            android:id="@+id/vid_title2"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:ellipsize="end"
                            android:padding="10dp"
                            android:text="@string/chem2"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    android:id="@+id/cd3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:padding="10dp"
                        >

                        <ImageView

                            android:id="@+id/vid_img3"
                            android:layout_width="170dp"
                            android:layout_height="145dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/chem_video3" />

                        <TextView
                            android:id="@+id/vid_title3"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:ellipsize="end"
                            android:padding="10dp"
                            android:text="@string/chem3"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    android:id="@+id/cd4">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:padding="10dp">

                        <ImageView

                            android:id="@+id/vid_img4"
                            android:layout_width="170dp"
                            android:layout_height="145dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/chem_video4" />

                        <TextView
                            android:id="@+id/vid_title4"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:ellipsize="end"
                            android:padding="10dp"
                            android:text="@string/chem4"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="12dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    android:id="@+id/cd5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:padding="10dp">

                        <ImageView

                            android:id="@+id/vid_img5"
                            android:layout_width="170dp"
                            android:layout_height="145dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/chem_video5" />

                        <TextView
                            android:id="@+id/vid_title5"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:ellipsize="end"
                            android:padding="10dp"
                            android:text="@string/chem5"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </android.support.v7.widget.GridLayout>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>